<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weathermain"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".SettingsActivity.LanguageActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">





        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/BtnBackLanguage"
            android:background="@drawable/iconback"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="30dp"
        app:cardCornerRadius="30dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/background_white"
        android:layout_marginTop="5dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewLanguageText"
                    android:hint="@string/TextViewLanguage"
                    android:textSize="25sp"
                    android:textColorHint="@color/black"
                    android:textAlignment="center"/>



                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/ImageViewLanguage"
                    android:background="@drawable/iconusa"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewLanguageUsa"
                    android:text="American"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_below="@id/TextViewLanguageText"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"/>



                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/BtnUsa"
                    android:background="@drawable/iconnext"
                    android:layout_below="@id/TextViewLanguageText"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="12dp"/>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/ViewUsa"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@id/ImageViewLanguage"
                    android:layout_marginTop="15dp"/>



                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ImageViewUkraine"
                    android:background="@drawable/iconukraine"
                    android:layout_below="@id/ViewUsa"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"/>
                
                
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewUkaine"
                    android:hint="@string/TextViewLanguage"
                    android:layout_below="@id/ViewUsa"
                    android:textSize="20sp"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="73dp"
                    android:layout_marginTop="30dp"/>



                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/BtnUkraine"
                    android:background="@drawable/iconnext"
                    android:layout_below="@id/ViewUsa"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="40dp"/>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/ViewUkraine"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@id/TextViewUkaine"
                    android:layout_marginTop="25dp"/>




                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/ImageViewPoland"
                    android:background="@drawable/iconpoland"/>












            </RelativeLayout>



        </LinearLayout>







    </androidx.cardview.widget.CardView>


</LinearLayout>
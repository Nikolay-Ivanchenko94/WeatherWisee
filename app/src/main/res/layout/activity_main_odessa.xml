<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather"
    android:orientation="vertical"
    tools:context=".ActivitiesOdessa.ActivityMainOdessa">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">


                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/BtnGeolocationOdessa"
                    android:background="@drawable/geolocation"
                    android:layout_marginTop="15dp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewOdessa"
                    android:hint="@string/TextViewOdessa"
                    android:textSize="30sp"
                    android:textColorHint="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/BtnSettingsOdessa"
                    android:background="@drawable/iconsettings"
                    android:layout_marginLeft="360dp"
                    android:layout_marginTop="20dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewWindy"
                    android:hint="@string/TextViewWindyText"
                    android:textSize="20sp"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"/>



                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:id="@+id/ImageViewWindy"
                    android:background="@drawable/windyicon"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewTuesday"
                    android:hint="@string/TextViewTuesday"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColorHint="@color/white"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewDegreeOdessa"
                    android:text="-8Â°"
                    android:textSize="55sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_color"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="0.333">



                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/ImageViewRainOdessa"
                            android:background="@drawable/rainicon"
                            android:layout_marginLeft="30dp"/>
                        
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TextViewDegreeRainOdessa"
                            android:text="0%"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"/>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TextViewRainOdessa"
                            android:hint="@string/TextViewRain"
                            android:textSize="20sp"
                            android:textColorHint="@color/white"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="5dp"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.333"
                        android:orientation="vertical"
                        android:layout_margin="8dp">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/ImageViewWindyOdessa"
                            android:background="@drawable/iconwindy"/>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TextViewDegreeWindyOdessa"
                            android:text="7 M/C"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"/>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TextViewWindyOdessa"
                            android:hint="@string/TextViewWindy"
                            android:textSize="20sp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="2dp"
                            android:textColorHint="@color/white"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:orientation="vertical"
                        android:layout_margin="8dp">

                        <ImageView
                            android:id="@+id/ImageViewHumidity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/humidityicon" />

                        <TextView
                            android:id="@+id/TextViewDegreeHumidityOdessa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:text="79%"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/TextViewHumidityOdessa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:hint="@string/TextViewHumidity"
                            android:textColorHint="@color/white"
                            android:textSize="20sp" />




                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/TextViewYesterdayOdessa"
                        android:hint="@string/TextViewYesterday"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textColorHint="@color/white"
                        android:layout_marginLeft="10dp"/>



                    <Button
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:id="@+id/BtnNext7DaysOdessa"
                        android:background="@null"
                        android:layout_marginLeft="300dp"
                        android:hint="@string/BtnNext7Days"
                        android:textSize="15sp"
                        android:textColorHint="@color/white"
                        android:layout_marginTop="5dp"/>




                </RelativeLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:id="@+id/RecyclerViewOdessa"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="160dp"
                    android:background="@drawable/background_round"
                    android:id="@+id/BtnDnipro"/>



                <Button
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/background_round"
                    android:id="@+id/BtnOdessa"/>



                <Button
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="200dp"
                    android:background="@drawable/background_round"
                    android:id="@+id/BtnKiev"/>


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>